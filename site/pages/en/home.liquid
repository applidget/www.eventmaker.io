{% assign sorted_all_articles = collections.articles | sort:'rank' %}
{% for article in sorted_all_articles  %}
  {% if article.type == "home_page" %}
    <section class="{% if article.background_color == 'yes' %}grey-bg{% endif %}">
      <div class="space-90"></div>
      <div class="container">
        <div class="row align-items-center">
          {% if article.illustration != blank and article.illustration_align == "left" %}
            <div class="col-md-7 margin-b-30">
              <img data-src="{{article.illustration}}" alt="" class="img-fluid">
            </div>
          {% endif %}
          {% if article.titre_en != blank or article.text_en != blank %}
            <div class="{% if article.illustration == blank %}col-md-12{% else %}col-md-5{% endif %} margin-b-30">
              {% if article.titre_en != blank %}
                <h3>{{article.titre_en}}</h3>
              {% endif %}
              {% if article.text_en != blank %}
                <div class="margin-b-20">
                  {{article.text_en}}
                </div>
              {% endif %}
              {% if article.bouton_texte_en != blank and article.bouton_lien != blank %}
                <a href="{{article.bouton_lien}}" target='_blank' class="btn btn-lg btn-primary btn-rounded">{{article.bouton_texte_en}}</a>
              {% endif %}
            </div>
          {% endif %}
          {% if article.illustration != blank and article.illustration_align == "right" %}
            <div class="col-md-7 margin-b-30">
              <img data-src="{{article.illustration}}" alt="" class="img-fluid">
            </div>
          {% endif %}
        </div>
      </div>
      <div class="space-30"></div>
    </section>
  {% endif %}
{% endfor %}

<section class="pricing-section" id="pricing">
  <div class="space-90"></div>
  <div class="container">
    <div class="center-title">
      <h2>{% editable_text 'Titre pricing', priority: 98 %}Easy plans. Cancel anytime.{% endeditable_text %}</h2>
      <p>{% editable_text 'Sous-titre pricing', priority: 98 %}Les plans ci-dessous ont été pensés pour tous les events et tous les budgets.{% endeditable_text %}</p>
    </div>
    <div class="row">
    {% assign sorted_all_plans = collections.plans | sort: 'rank' %}
    {% for plan in sorted_all_plans  %}
      <div class="col-md-4 margin-b-30">
        <div class="price-box {% if plan.featured and plan.featured != 'none' %}{{plan.featured}}{% endif %}">
          <div class="price-header">
            <h1>{{plan.title_en}}</h1>
            <h4>From {{plan.pricing_en}}<span class="peroid"> {{plan.period_en}}</span></h4>
          </div>
          <div class="price-footer">
            <a href="/en{{plan.link}}" class="btn btn-rounded btn-dark-border" title="View offers">View offers</a>
          </div>
        </div>
      </div><!--/col-->
    {% endfor %}
    </div>
  </div>
  <div class="space-60"></div>
</section><!--end pricing section-->


<section class="features-bg">
  <div class="container">
    <div class="center-title">
      <h2>{% editable_text 'Titre Evenements EN', priority: 95 %}Why choose SAAS{% endeditable_text %}</h2>
      <p>{% editable_text 'Sous-titre Evenements EN', priority: 95 %}Over 500,000 Customers worldwide{% endeditable_text %}</p>
    </div>
    <div class="row">
      {% assign count_type_event = 0 %}
      {% for article in sorted_all_articles %}
        {% if article.type == "events_type" %}
          <div class="col-md-6">
            <div class="feature-icon-left clearfix">
              <div class="icon">
                <img class="img-event" data-src="{{article.illustration}}"  alt="{{article.titre_en}}"/>
              </div>
              <div class="content">
                <h4>{{article.titre_en}}</h4>
                {% if article.text_en != blank %}
                  {{article.text_en | strip_html | truncate: 100 }}
                {% endif %}
                <p>
                  <a href="/en/events/{{article.slug}}"  title="{{article.titre_en}}">More ...</a>
                </p>
              </div>
            </div><!--/feature icon-->
          </div>
          {% assign count_type_event = count_type_event | plus: 1 %}
          {% if count_type_event >= 19 %}
            {% break %}
          {% endif %}
        {% endif %}
      {% endfor %}
    </div>
    <p class="text-right">
      <a href="/en/events">More ...</a>
    </p>
  </div>
</section>

<section class="testimonials skin-bg">
  <div class="space-90"></div>
  <div class="container" id="testimonials">
    <div class="center-title">
      <h2>{% editable_text 'Titre Word from cusomers EN', priority: 94 %}True words from our customers.{% endeditable_text %}</h2>
      <p>{% editable_text 'Sous-titre Word from cusomers EN', priority: 94 %}Over 500,000 Customers worldwide{% endeditable_text %}</p>
    </div>
    <div class="row">
      {% assign collection_word_from_customer = collections.word_from_customer | sort: 'rank' %}
      {% for word_customer in collection_word_from_customer limit: 3 %}
        <div class="col-md-4 margin-b-30">
          <div class="feedback-box">
            {{word_customer.quote_en}}
          </div>
          <div class="testi-info">
            <img data-src="{{word_customer.avatar}}" alt="{{word_customer.quote_en | strip_html | truncatewords : 15 }}" class="rounded-circle" width="60">
            <div class="content">
              <h4>{{word_customer.name_customer}}</h4>
              <em>{{word_customer.function_en}}</em>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
  <div class="space-60"></div>
</section><!--end testimonials section-->


{% if display_modal != "0" %}
  <div class="modal fade" id="myModal">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <div class="col-md-12 text-center">
            <h5 class="modal-title">{% editable_text 'Titre modal' %}Applidget devient Eventmaker{% endeditable_text%}</h5>
          </div>
        </div>
        <div class="modal-body text-center">
          <img width="120px" data-src="{% editable_file 'logo applidget' %}https://events-cms.s3.amazonaws.com/uploads/editable_field/editable_element/file/59b7958e0c28740026cb7f68/logo_applidget_blue.png{% endeditable_file %}" alt="Mobicheckin appli">
          <i class="ion-arrow-right-a" style="font-size: 39px; line-height: 60px; vertical-align: middle; margin: 0 20px;"></i>
          <img width="180px" data-src="{% editable_file 'logo eventmaker' %}https://events-cms.s3.amazonaws.com/uploads/editable_field/editable_element/file/59b794980c28740026cb7f67/eventmaker_noir.png{% endeditable_file %}" alt="Em teal logo">
          <div class="embed-responsive embed-responsive-16by9">
            <iframe class="embed-responsive-item" src="{% editable_text 'URL vidéo modal' %}https://www.youtube.com/embed/xML7wi-n0v8{% endeditable_text %}" allowfullscreen></iframe>
          </div>
          {% editable_text 'Texte modal', type: cktext_area %}<p>Rassurez-vous, nous sommes toujours les m&ecirc;mes, seul notre nom change. Appelez-nous d&eacute;sormais Eventmaker !!!&nbsp;</p>{% endeditable_text %}
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary" data-dismiss="modal">Fermer</button>
        </div>
      </div>
    </div>
  </div>

  <script type="text/javascript">
    $(window).on('load',function(){
      $('#myModal').modal('show');
    });
  </script>
{% endif %}
